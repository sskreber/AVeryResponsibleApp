<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#BBDEFB" />
            <gradient android:angle="-90" android:startColor="#BBDEFB" android:endColor="#689a92"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFCDD2" />
            <solid android:color="#FFCDD2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#FFCDD2" />
            <gradient android:angle="-90" android:startColor="#EF9A9A" android:endColor="#FFCDD2" />
        </shape>
    </item>
</selector>
